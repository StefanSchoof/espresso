{
  "name": "espresso-func",
  "version": "1.0.0",
  "description": "A project to control my espresso machine with a raspberry pi",
  "scripts": {
    "test": "jest",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit --coverage",
    "build": "webpack",
    "start": "webpack --mode development && cd dist && func start",
    "lint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "author": "Stefan Schoof",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "https://github.com/StefanSchoof/espresso.git"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageReporters": [
      "cobertura",
      "html"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.12",
    "awesome-typescript-loader": "^5.2.1",
    "azure-functions-typescript": "github:christopheranderson/azure-functions-typescript",
    "azure-iothub": "^1.8.2",
    "azure-keyvault": "^3.0.4",
    "backend-tslint-rules": "^1.4.0",
    "copy-webpack-plugin": "^4.6.0",
    "jest": "^23.6.0",
    "jest-junit": "^5.2.0",
    "ms-rest-azure": "^2.5.9",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2"
  }
}
