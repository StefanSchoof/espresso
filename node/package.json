{
  "name": "espresso",
  "version": "1.0.0",
  "description": "A project to control my espresso machine with a raspberry pi",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageReporters": [
      "cobertura",
      "html"
    ]
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "test": "jest",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit --coverage",
    "lint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "author": "Stefan Schoof",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "https://github.com/StefanSchoof/espresso.git"
  },
  "dependencies": {
    "applicationinsights": "^1.0.7",
    "azure-iot-common": "^1.8.2",
    "azure-iot-device": "^1.8.2",
    "azure-iot-device-mqtt": "^1.8.2",
    "jest-junit": "^5.2.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.12",
    "backend-tslint-rules": "^1.4.0",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2"
  }
}
